<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="10dp"
    android:layout_margin="10dp"
    android:outlineSpotShadowColor="@color/colorAccent"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    android:elevation="@dimen/cardview_default_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/tv_centreName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Center Name"
            android:textAllCaps="true"
            android:padding="3dp"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_hospital"
            android:drawablePadding="4dp"
            android:layout_margin="3dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_centreLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Center Name"
            android:textAllCaps="true"
            android:padding="3dp"
            android:layout_margin="3dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="4dp"
            android:layout_below="@+id/tv_centreName" />

        <TextView
            android:id="@+id/tv_centreTimings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Center Timings"
            android:textAllCaps="true"
            android:padding="3dp"
            android:layout_margin="3dp"
            android:drawableLeft="@drawable/ic_timer"
            android:drawablePadding="4dp"
            android:layout_below="@+id/tv_centreLocation" />
        
        <LinearLayout
            android:id="@+id/ll_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            android:layout_below="@+id/tv_centreTimings">

            <TextView
                android:id="@+id/tv_vaccine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Center Timings"
                android:textAllCaps="true"
                android:padding="3dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_margin="3dp"
                android:drawableLeft="@drawable/ic_vaccines_24"
                android:drawablePadding="4dp"
                android:layout_below="@+id/tv_centreLocation" />

            <TextView
                android:id="@+id/tv_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fees"
                android:textAllCaps="true"
                android:padding="3dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_margin="3dp"
                android:drawablePadding="4dp"
                android:layout_below="@+id/tv_centreLocation"
                android:gravity="center_horizontal" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_first"
            android:orientation="horizontal"
            android:layout_margin="3dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_age_limit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Age Limit"
                android:textAllCaps="true"
                android:padding="3dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_margin="3dp"
                android:drawablePadding="4dp"
                android:layout_below="@+id/tv_centreLocation"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/tv_availability"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Availability"
                android:textAllCaps="true"
                android:padding="3dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_margin="3dp"
                android:drawablePadding="4dp"
                android:layout_below="@+id/tv_centreLocation"
                android:gravity="center_horizontal" />


        </LinearLayout>

        
    </RelativeLayout>


</androidx.cardview.widget.CardView>
</layout>